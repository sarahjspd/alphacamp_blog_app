<h3>It's Time to Write...</h3>

	<%= form_for @post, url: posts_path, method: :post do |f| %>
<table class="table table-hover">
	<thead>	
		<th><%= f.label :title %></th>
		<th><%= f.label :author %></th>
	</thead>
	<tbody>
		<tr>
			<td>
			  <%= f.text_field :title %>
			</td>
			<td>
			  <%= f.text_field :author %>
			</td>
		</tr>
	</tbody>

	<thead>
	<th><%= f.label :content %></th>
	</thead>
	<tbody>
		<tr>
			<td>
				<%= f.text_field :content %>
			</td>
		</tr>
	</tbody>
</table>
	<div class="buttons">

	  <%= f.submit "Create" %>
	 </div>
	 <div class=buttons><%= link_to "Back_to_All_Posts", posts_path %></div>
	<% end %>
